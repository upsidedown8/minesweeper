{
    "version": "0.2.0",
    "configurations": [
        { // build and debug active
            "name": "g++ - Build and debug active file",
            "type": "cppdbg",
            "request": "launch",
            "program": "${cwd}/build/${fileBasenameNoExtension}",
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "externalConsole": true,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": false
                }
            ],
            "preLaunchTask": "C++ Build active file",
            "miDebuggerPath": "/usr/bin/gdb"
        },
        { // build and debug main.cpp
            "name": "g++ - Build and debug main file",
            "type": "cppdbg",
            "request": "launch",
            "program": "${cwd}/build/main",
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "externalConsole": true,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": false
                }
            ],
            "preLaunchTask": "C++ Build main file",
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}